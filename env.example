# Environment Variables for Combiphar Backend
PORTAL_KEY_AES=
PORTAL_KEY_BASE64=
PORTAL_KEY_RJ256=
PORTAL_KEY_IV=

# Environment Variables for Vita Backend
LOCAL_KEY_AES=
LOCAL_KEY_IV=

# JWT Configuration
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1

# Cookie Security (true for production HTTPS, false for development HTTP)
COOKIE_SECURE=true

# Cookie Domain (optional, leave empty for default behavior)
# Example: .combiphar.com for cross-subdomain access
COOKIE_DOMAIN=

# Database Configuration
DB_HOST=db
DB_USERNAME=postgres
DB_PASSWORD=combiphar*2024
DB_DATABASE=combiphar-db

# PGVector Configuration (using existing PostgreSQL database)
# No additional configuration needed - uses existing DB_* settings

# CORS Allowed Origins (untuk multi gunakan comma)
# Example: http://localhost:5173,https://combiphar-chatbot.oemahsolution.com
ALLOWED_ORIGINS=https://vita.combiphar.com

# Timeout settings (seconds)
# Increase if frontend->backend or backend->LLM requests sometimes time out.
GUNICORN_TIMEOUT=300
LLM_REQUEST_TIMEOUT=300

# Minimum grounding score to accept/show vector-doc answers (0.0-1.0)
# Lower values make the system more likely to use vectordb answers
# Default in code is 0.10 if unset
GROUNDED_MIN_SCORE=0.10

# Minimum vector doc score to keep a document after hybrid rerank
# Default 0.20
VECTOR_DOC_MIN_SCORE=0.6

# Minimum similarity floor for vector search results (0.0-1.0)
VECTOR_SIMILARITY_FLOOR=0.5

# Weight of vector vs lexical score in hybrid rerank (0..1)
# Example: 0.7 means 70% vector, 30% lexical
HYBRID_VECTOR_WEIGHT=0.7
